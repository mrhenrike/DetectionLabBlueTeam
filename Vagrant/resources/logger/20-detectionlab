#!/bin/bash

# Safer color handling
txtcyan=$(tput setaf 6; tput bold)
txtwhite=$(tput setaf 7; tput bold)
reset=$(tput sgr0)

cat <<EOM
${txtcyan}
 ░▒▓███████▓▒░░▒▓██████▓▒░ ░▒▓██████▓▒░  
